################################################################################
# Flask                                                                        #
################################################################################
Show "Unique Flask"
    Class "Flask"
    Rarity Unique
    SetTextColor Var("Flask Color")
    SetBorderColor Var("Unique Item Color")

Show "Quality Flask"
    Class "Flask"
    Quality > 0
    SetTextColor Var("Flask Color")
    SetBackgroundColor Var("Tier2 BG Color") 200

Unset "Large Flask"
    Class "Flask"
    DropLevel >= 60
    SetTextColor Var("Flask Color")

    Fork "AreaLevel"
        Hide "Very High"
            AreaLevel >= 74
        Show "High"
            AreaLevel >= 64
        Show "Middle"
            AreaLevel >= 45
        Show "Low"
            AreaLevel < 45
Unset "Middle Flask"
    Class "Flask"
    DropLevel >= 40
    SetTextColor Var("Flask Color")

    Fork "AreaLevel"
        Hide "High"
            AreaLevel >= 64
        Show "Middle"
            AreaLevel >= 45
        Show "Low"
            AreaLevel < 45
Show "Small Flask"
    Class "Flask"
    DropLevel < 40
    SetTextColor Var("Flask Color")

    Fork "AreaLevel"
        Hide "High"
            AreaLevel >= 64
        Hide "Middle"
            AreaLevel >= 45
        Show "Low"
            AreaLevel < 45

################################################################################
# Jewel                                                                        #
################################################################################
Show "Unique Jewel"
    Class "Jewel"
    Rarity Unique
    SetFontSize Var("Large Font Size")
    SetTextColor Var("Jewel Color")
    SetBackgroundColor 0 0 0
    SetBorderColor Var("Unique Item Color")
    MinimapIcon Medium Var("Unique Effect Color") Var("Jewel Minimap Icon Shape")
    PlayEffect Var("Unique Effect Color")

Show "Jewel"
    Class "Jewel"
    SetFontSize Var("Default Font Size")
    SetTextColor Var("Jewel Color")
    SetBackgroundColor Var("Trivial BG Color") 240
    SetBorderColor Var("Jewel Color")
    # MinimapIcon NONE
    PlayEffect Var("Trivial Effect Color") Temp

