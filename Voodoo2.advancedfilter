################################################################################
# Gold                                                                         #
################################################################################
Show "Gold"
    BaseType == "Gold"
    SetTextColor Var("Gold Color")
    SetBackgroundColor 0 0 0 200
    SetFontSize Var("Small Font Size")

################################################################################
# Equipments                                                                   #
################################################################################
#
# Jewelry(Amulet/Ring)
#
Show "Jewelry"
    Class "Amulets" "Rings"
    SetBorderColor Var("Jewelry Color")

    Mixin "Quality"
        Show "Has Quality"
            Quality > 0
            SetBackgroundColor Var("Tier2 BG Color") 200

#
# Belt
#
Unset "Belts"
    Class "Belts"
    SetBorderColor Var("Jewelry Color")

    Fork "Rarity"
        Show "Rare"
            Rarity Rare
        Prop("Magic Equipment Activity") "Magic"
            Rarity Magic
        Prop("Normal Equipment Activity") "Normal"
            Rarity Normal

    Mixin "Quality"
        Show "Has Quality"
            Quality > 0
            SetBackgroundColor Var("Tier2 BG Color") 200

#
# Weapon/Gear
#
Unset "Weapon/Gear"
    Class Var("Weapons") Var("Gears")

    Fork "Rarity"
        Show "Rare"
            Rarity Rare
        Prop("Magic Equipment Activity") "Magic"
            Rarity Magic
        Prop("Normal Equipment Activity") "Normal"
            Rarity Normal

    Mixin "Quality"
        Show "Has Quality"
            Quality > 0
            SetBackgroundColor Var("Tier2 BG Color") 200

    Mixin "Sockets"
        Show "Has Sockets"
            Sockets > 0
            SetBackgroundColor Var("Tier2 BG Color") 200

################################################################################
# Gem                                                                          #
################################################################################
Show "Uncut Gem"
    BaseType == "Uncut Skill Gem" "Uncut Support Gem" "Uncut Spirit Gem"
    SetTextColor Var("Gem Color")
    SetBorderColor Var("Gem Color")

    Mixin "BaseType"
        Show "Uncut Spirit Gem"
            BaseType == "Uncut Spirit Gem"
            SetBackgroundColor Var("Tier2 BG Color") 200

